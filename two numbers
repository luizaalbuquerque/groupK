
package twonumbers;
import java.util.Scanner;
/**
 *
 * @author luizaalbuquerque
 */
public class TwoNumbers {
 public TwoNumbers() {
    }
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
  Scanner myKyb= new Scanner(System.in);

        try {

            System.out.println("Type a number: ");

            int num1 = myKyb.nextInt();

            System.out.println("Type another number: ");

            int num2 = myKyb.nextInt();
            int num3 = num1 + num2;
            Integer.toString(num1);
            Integer.toString(num2);
            Integer.toString(num3);
            System.out.println( "The sum of " + num1 + " and " + num2 + " is = " + num3 );
                          
        } catch (Exception e) {

            System.out.println("That is not valid, only numbers are allowed");
         
        }

    }

}

 
    

